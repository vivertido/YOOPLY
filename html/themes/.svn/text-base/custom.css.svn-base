/*** general styling */
.ui-page.ui-body-c{
background:url('https://lh5.googleusercontent.com/-d9io03sZP64/UcEwudbiTQI/AAAAAAAACFw/UqIu28Qx4u8/s506-o/bg.png');
box-shadow:  0px 0px 30px 5px rgba(107, 105, 105, 0.3) inset,
 0px 0px 0px 1px rgba(107, 105, 105, 0.4) inset;

}

 

.ui-content .choice_list  .ui-btn-active .ui-link-inherit,
.ui-btn-down-c a.ui-link-inherit,
#home .ui-btn-down-c a.ui-link-inherit{
color:#fff !important;
}

img{
max-width: 100%;
height: auto; width: auto;
-webkit-box-sizing: border-box;
-moz-box-sizing: border-box;
box-sizing: border-box;
}
.ui-grid-a .ui-block-a, .ui-grid-a .ui-block-b {
    width: 48%;
    padding:1%;
}


.help-button{

    width:20px;
    height: 20px;
    float: right;

}


/* title bar */
.ui-header.ui-bar-c{
background-image:url('http://1.bp.blogspot.com/_UdH8rcs3s1Q/TGdcNtKNxOI/AAAAAAAAAKM/-jvA0rVt9_E/s320/iPadBackgroundTexture-brown.png');
}

p.listSubtext{


  margin-left:15px; margin-right:15px;
}

#chooseAPerson-popup {
    right: 0 !important;
    left: auto !important;
}
#chooseAPerson {
    width: 300px;
    border: 1px solid #000;
    border-right: none;
    
    
}

.ui-grid-b img {
    width  : auto;
    height : 80%;
}

p.avatarSubtitle{

margin-top:2px;

}

/* for the shoutout sender name in the listview*/
p.listViewTextTop{
  

font-weight:normal; margin-top: 2px; margin-bottom: 2px; font-size:16px

}

/* for the shoutout message in the listview*/
p.listViewTextBottom{ 

font-weight:normal; margin-top: 2px; margin-bottom: 2px; font-size:30px; white-space: normal;


}
/* for the shoutout time in the listview*/
p.listViewTextBottom{ 
 

margin-right:10px ; font-weight:normal; font-size:19px ; white-space: normal;


}
p.allSoutoutsTextTop{

font-weight:normal; margin-top: 1px; margin-bottom: 1px; font-size:14px

}
p.allSoutoutsTextBottom{

font-weight:normal; margin-top: 1px; margin-bottom: 1px; font-size:12px

}
img.scrollingImgs{

height:30px;
display: inline;
margin-right:20px;

}
p.scrollingText{

font-weight:normal; margin-top: 1px; margin-bottom: 1px; font-size:16px; 
display: inline

}
#marqueeContainer{

height:130px;

}
.ui-icon-quickEntry-positive {
	background-image: url("/images/vampireSmall.png");
}
p{

	font-family: 'Dosis';

font-weight:normal;
}
/*** home **/
@media  (min-width: 1200px) {

#referral-form-wrapper
    {
        padding:10px; font-family:'Dosis'; text-shadow:none; 
         background: #f9f9f9;
        border-width:1px;
        border-radius:5px;
         
    }



    }

@media all and (min-width: 645px) {
    #referral-form-wrapper
    {
        padding:10px; font-family:'Dosis'; text-shadow:none; 
         background: #f9f9f9;
        border-width:1px;
        border-radius:5px;
         
    }

    .center-heading
    {
        color:#603813;
        text-align:left;
        margin-top:-5px;
    }

    .instructions
    {
        font-size:16px;  padding:5px; border-radius:4px;
        margin-top:-20px;
    }

    .category-label
    {
        margin-right:20px;
        color:#603813;
    } 

    #section1
    {
        width:100%;
    }

    #basic-info
    {
         
         
        width:100%;
         
    }

    #basic-info-right
    {
         
        padding:10px;
        position:relative;
        width:46%;
        float:left;
         
    }

    #basic-info-left
    {
         
        padding:10px;
        position:relative;
        width:46%;
        float:left;
        
    }

    #additional-info
    {
         
         
        /*border-color:#2db7e5;*/
         
         
        width:100%;
         
         
        margin-top:20px;
    }

    #motive
    {
     
     
        position:relative;
         width:inherit;
         
        float:left;
        padding:10px;
    }

    #motive  .ui-input-text{

        width:60%;


    }

    #enter-other-motivation
    {
        border-radius:10px;
        font-size:18px;
    }

    #enter-other-involved
    {
        border-radius:10px;
        font-size:18px;
        width:60%;

    }

    #others
    {
        position:relative; 
         
         
        padding:10px;
        float:left;
        border-width:0px;
        width:inherit;
         
    }

    #action-taken
    {
        padding:10px;
         
        width:95%;
        height:100%;
         
    }

    .attribute
    {
        margin-left:5px;
        font-size:20px;
    }
}

 /*For smartphones*/
@media all and (max-width: 644px) {
    #referral-form-wrapper
    {
        padding:10px;
        font-family:'Dosis';
        text-shadow:none;
        background-color: #ffffff;
    }

    .center-heading
    {
        color:#603813;
        text-align:center;
        margin-top: -75px;
    }

    .instructions
    {
        font-size:12px;
    }

    #basic-info
    {
        width:100%;
    }

    #basic-info-right
    {
        
        padding:5px;  
        width:100%;
    }

    #basic-info-left
    {
        
        padding:5px;
        width:100%;
    }

    #additional-info
    {
        width:100%;
        
        height:400px;
    }

    .category-label
    {
        display:block; 
    }

    #motive
    {
        padding:10px;
        border-width:0px;
        width:90%;
    }

    #motive  .ui-input-text{

        width:100%;


    } 
    #motivation-selector  .ui-controlgroup-controls {

        width:100%;




    }

    #others
    {
        padding:10px;
        border-width:0px;
        width:90%;
    }

    .attribute
    {
        margin-left:10px;
        font-size:16px;
    }

    #action-taken
    { 
        padding:10px;
        width:100%;
        height:100%;
        margin-top: -100px;^@
         
    }
}

